<div class="index">
      <div class="row">
        <div class="container">
          <div class="col-md-12"> 
<div Style="margin:10px;width:400px;padding-top:50px;">
<h1>Log In</h1>

<%= form_tag sessions_path do %>
  <div class="field">
    <%= label_tag :email %><br /><br />
    <%= text_field_tag :email, params[:email] %>
  </div>
  <div class="field">
    <%= label_tag :password %><br /><br />
    <%= password_field_tag :password %>
  </div><br />
  <div class="actions"><%= submit_tag "Log In" %></div>
  <p><%= link_to "forgot password?", new_password_reset_path %></p>
<% end %>
</div>
</div>
</div>
</div>
</div>