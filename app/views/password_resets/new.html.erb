<div class="index signup-form">
                <div class="row">
                    <div class="container header_banner">
                        <h1>Reset Password for gSchool</h1>
                        <div class="visible-xs">
                            <br />
                            <br />
                        </div>
                        <div class="col-xs-12 col-sm-10 col-sm-offset-1 round-corners">
                            <a href="#" class="list-group-item active"></a>
                            <%= form_tag password_resets_path, :method => :post do %>
                            <div class="form-container">
                                <h2>
                                    <!-- <span>2</span> -->
                                    Enter your email to reset your password
                                </h2>
                                <br />
                                <div class="col-xs-12 col-sm-6">
                                    <!-- <input type="text" class="form-control" placeholder="First Name" /> -->
                                    <%= text_field_tag :email,params[:email], :class=>"form-control", :placeholder=>"Email"  %>
                                </div>
                                <div class="visible-xs">
                                    <div class="clear"></div>
                                    <br />
                                </div>
                                <div class="hidden-sm">
                                    <div class="clear"></div>
                                    <br />
                                </div>
                                <div class="clear"></div>
                                <hr />
                                <div class="col-xs-12 col-sm-12">
                                  <%= submit_tag "Reset Password",:class => "btn btn-lg btn-primary pull-left" %>
                                </div>
                                <div class="clear"></div>
                            </div>
                            <% end %>
                        </div>
                    </div>
                    <br />
                    <br />
                    <br />
                </div>        
            </div>