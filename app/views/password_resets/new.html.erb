<div class="index">
      <div class="row">
        <div class="container">
          <div class="col-md-12"> 
<div Style="margin:10px;width:400px;padding-top:50px;">
<h1>Reset Password</h1>

<%= form_tag password_resets_path, :method => :post do %>
  <div class="field">
    <%= label_tag :email %><br /><br />
    <%= text_field_tag :email, params[:email] %><br /><br />
  </div>
  <div class="actions"><%= submit_tag "Reset Password" %></div>
<% end %>
</div>
</div>
</div>
</div>
</div>